server:
  host: "example.com"
  port: 22
  username: "user"
  auth_method: "key"  # key, password
  key_path: "/path/to/private/key"
  timeout: 30
  os_type: "ubuntu"  # ubuntu, centos, debian, rhel, fedora
  forbidden_commands:
    - "rm -rf /"
    - "dd if=/dev/zero"
    - "mkfs"
    - "fdisk"
    - "parted"
    - "mkfs.ext4"
    - "mkfs.xfs"
    - "mkfs.btrfs"
    - "format"
    - "shutdown"
    - "reboot"
    - "halt"
    - "poweroff"
    - "init 0"
    - "init 6"
  installed_services:
    - "docker"
    - "nginx"
    - "postgresql"
  installed_packages:
    - "curl"
    - "wget"
    - "git"
    - "vim"
    - "htop"
  disk_space_threshold: 1024  # MB
  memory_threshold: 512  # MB